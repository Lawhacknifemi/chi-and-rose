{
  "name": "@chi-and-rose/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "db:push": "bun --env-file=../../apps/server/.env run scripts/push-schema.ts",
    "db:push:interactive": "bun --env-file=../../apps/server/.env run drizzle-kit push",
    "db:generate": "bun --env-file=../../apps/server/.env run drizzle-kit generate",
    "db:studio": "bun --env-file=../../apps/server/.env run drizzle-kit studio",
    "db:migrate": "bun --env-file=../../apps/server/.env run drizzle-kit migrate"
  },
  "dependencies": {
    "@chi-and-rose/env": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chi-and-rose/config": "workspace:*",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
